---
import Layout from '../layouts/Layout.astro';
---

<Layout title="What Time Now">
  <main class="min-h-screen bg-zinc-100 flex items-center justify-center px-4 py-12 font-sans">
    <div class="bg-white shadow-xl rounded-2xl w-full max-w-2xl p-8 sm:p-12 text-center animate-fade-up">
      <h1 class="text-sm text-zinc-500 uppercase tracking-wide mb-2">
        🙋🏻 Quick quiz
      </h1>
      <h2 class="text-3xl sm:text-4xl font-bold text-zinc-800 mb-8">
        What time is it right now?
      </h2>

      <form
        method="GET"
        action="/result"
        class="w-full flex flex-col sm:flex-row gap-4 justify-center"
      >
        <input
          type="text"
          name="answer"
          id="answer"
          placeholder="No pressure… but there's only one right answer 😉"
          required
          class="w-full px-4 py-3 rounded-xl border border-zinc-300 focus:ring-2 focus:ring-green-400 text-base shadow-sm transition"
          onchange="console.log('Input value:', this.value);"
        />
        <button
          type="submit"
          class="shrink-0 bg-green-500 hover:bg-green-600 text-white font-semibold px-6 py-3 rounded-xl transition shadow"
        >
          ✅ Check
        </button>
      </form>
    </div>
  </main>
</Layout>